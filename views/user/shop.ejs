<%-include("../includes/head")%>
 <link rel="stylesheet" href="/css/product.css" />
 <script src="/js/script.js" defer></script>
 <script src="/js/shop/shop.js" defer></script>
  <script src="/js/cart.js" defer></script>
</head>
<body>
    <%-include("../includes/navigation")%>
    <main class="main">
        <%-include("../includes/notification")%>
        <%if(products.length===0){%>
            <h2>No Products found in store</h2>
        <%}else{%>
            <h2>Products Available in store</h2>
            <div class="shop-products">
                <%products.forEach(product=>{%>
                    <div class="product-card">
                        <div class="product-image-container" >
                            <div class="product-images"  data-image-id="<%=product._id%>" data-image-index-number="0" data-image-urls="<%=product.imageUrls%>">
                                <%product.imageUrls.forEach(imageUrl=>{%>
                                <img alt="<%=product.name%>" src="<%=imageUrl%>" data-image-id="<%=product._id%>" data-image-urls="<%=product.imageUrls%>" class="product-image"/>
                            <%})%>
                            </div>
                           
                            <div class="image-switcher">
                                <button type="button" class="prev-arrow" data-image-id="<%=product._id%>" disabled>Previous</button>
                                <button type="button"  class="next-arrow" data-image-id="<%=product._id%>">Next</button>
                            </div>
                        </div>
                            <div class="product_info">
                                <h3 class="product_name"><%=product.name%></h3>
                                <%if(product.description.trim().length>100){%>
                                        <h4 class="product_description" ><%=product.description.substring(0,50)%>...<a href="#">read more</a></h4>
                                    <%}else{%>
                                        <h4 class="product_description" ><%=product.description%></h4>
                                    <%}%>
                                <h4 class="product_price">$<%=product.price%></h3>
            </div>
                        <div class="product_actions">
                            <button type="button" class="add_to_cart" value="<%=product._id%>">Add to cart</button>
                        </div>
                    </div>
                <%})%>
            </div>
    <%}%>
    </main>
   
</body>